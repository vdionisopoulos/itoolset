<!-- Init Feather + Sidebar Toggle + Auto Expand Logic -->
<script>
  document.addEventListener("DOMContentLoaded", function () {
    if (typeof feather !== 'undefined') {
      feather.replace();
    }

    // Sidebar wrapper toggler
    const toggle = document.querySelector(".js-sidebar-toggle");
    const wrapper = document.querySelector(".wrapper");
    if (toggle && wrapper) {
      toggle.addEventListener("click", () => wrapper.classList.toggle("toggled"));
    }

    // Expand correct submenu based on title
    const title = "<%= title %>";

    const collapseMap = {
      'SLA Tools': ['SLA Calculator', 'SLA Comparison', 'SLA Reverse'],
      'Password Tools': ['Password Generator', 'Passphrase Generator', 'Strength Checker']
    };

    if (collapseMap['SLA Tools'].includes(title)) {
      const el = document.getElementById("slaTools");
      if (el) new bootstrap.Collapse(el, { toggle: true });
    }

    if (collapseMap['Password Tools'].includes(title)) {
      const el = document.getElementById("passTools");
      if (el) new bootstrap.Collapse(el, { toggle: true });
    }
  });
</script>

